{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "ES2020"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": [
        "lib/*"
      ],
      "@/components/*": [
        "components/*"
      ]
    }
  },
  "include": [
    "app",
    "components",
    "lib",
    "supabase",
    "styles"
  ],
  "exclude": [
    "node_modules"
  ]
}
